<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>jar-with-dependencies-natives-macosx-universal</id>
	<formats>
		<format>jar</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${basedir}/target/classes</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*/*/</include>
			</includes>
		</fileSet>
	</fileSets>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<unpack>false</unpack>
			<includes>
				<include>org.jogamp.jogl:jogl-all:jar:2.0.2</include>
				<include>org.jogamp.jogl:jogl-all:jar:natives-macosx-universal:2.0.2</include>
				<include>org.jogamp.gluegen:gluegen-rt:jar:2.0.2</include>
				<include>org.jogamp.gluegen:gluegen-rt:jar:natives-macosx-universal:2.0.2</include>
			</includes>
		</dependencySet>
	</dependencySets>
</assembly>